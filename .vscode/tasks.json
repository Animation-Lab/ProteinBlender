{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "plugin: build‑wheels",
            "type": "process",
            "command": "C:\\Program Files\\Blender Foundation\\Blender 4.3\\4.3\\python\\bin\\python.exe",
            "args": [
                "${workspaceFolder}\\build.py"
            ]
        },
        {
            "label": "plugin: install‑deps",
            "type": "process",
            "command": "C:\\Program Files\\Blender Foundation\\Blender 4.3\\4.3\\python\\bin\\python.exe",
            "args": [
                "-m", "ensurepip", "--upgrade"
            ]
        },
        {
            "label": "plugin: pip‑deps",
            "type": "process",
            "dependsOn": "plugin: install‑deps",
            "command": "C:\\Program Files\\Blender Foundation\\Blender 4.3\\4.3\\python\\bin\\python.exe",
            "args": [
                "-m", "pip", "install", "--upgrade",
                "databpy==0.0.8",
                "MDAnalysis>=2.8.0",
                "biotite>=0.41.2",
                "mrcfile>=1.5.3",
                "starfile>=0.5.11"
            ]
        },
        {
            "label": "Blender: Dev–build & install",
            "type": "shell",
            "dependsOn": ["plugin: pip‑deps"],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "command": "\"C:\\Program Files\\Blender Foundation\\Blender 4.3\\blender.exe\"",
            "args": [
                "--python", "${workspaceFolder}\\dev_register.py"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}